<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/usersbuttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="12"></TextView>

        <ImageButton
            android:id="@+id/createnewsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/create_account"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/button2admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/assignAdmin"
            app:srcCompat="@drawable/assign" />

        <ImageButton
            android:id="@+id/imageSignOut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/sign_out"
            app:srcCompat="@drawable/sign_out" />

        <ImageButton
            android:id="@+id/photoScan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/photoScan"
            app:srcCompat="@drawable/qr_code" />

        <ImageButton
            android:id="@+id/nfcscan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/photoScan"
            app:srcCompat="@drawable/nfc_logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userAttributes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/instructorName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/instructorName" />

        <TextView
            android:id="@+id/exCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/excount" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/subscCost" />
    </LinearLayout>

    <GridView
        android:id="@+id/gvMain"
        android:layout_width="match_parent"
        android:layout_height="145dp">

    </GridView>

    <ImageView
        android:id="@+id/img_result_qr"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/qrCode"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/gerbvrn" />

</LinearLayout>