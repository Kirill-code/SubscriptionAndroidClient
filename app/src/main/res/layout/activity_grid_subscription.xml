<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/usersbuttons"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userName"
            android:layout_width="209dp"
            android:layout_height="46dp"></TextView>

        <ImageView
            android:id="@+id/addSubscription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_add" />

        <ImageButton
            android:id="@+id/button2admin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:contentDescription="adminAccount"
            app:srcCompat="@drawable/ic_person_white" />

        <ImageButton
            android:id="@+id/photoScan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:contentDescription="adminAccount"
            app:srcCompat="@android:drawable/ic_menu_camera" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userAttributes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/instructorName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/instructorName" />

        <TextView
            android:id="@+id/exCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/excount" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:text="@string/subscCost" />
    </LinearLayout>

    <GridView
        android:id="@+id/gvMain"
        android:layout_width="match_parent"
        android:layout_height="142dp">

    </GridView>

    <ImageView
        android:id="@+id/img_result_qr"
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:contentDescription="@string/qrCode"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/logo" />

</LinearLayout>